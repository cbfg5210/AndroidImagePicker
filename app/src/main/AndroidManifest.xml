<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pizidea.imagepickerDemo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.pizidea.imagepicker.A3App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.pizidea.imagepicker.ui.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pizidea.imagepicker.ui.demo.ImagePreviewActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.pizidea.imagepicker.ui.demo.ImagesGridActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.pizidea.imagepicker.ui.demo.OkImageCropActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.pizidea.imagepicker.ui.demo.MyPreviewActivity"></activity>
    </application>

</manifest>